{
	"name": "rad-crowdfunding",
	"version": "0.1.0",
	"description": "An open source crowdfunding template.",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "concurrently \"npm:dev:client\" \"npm:dev:convex\" --names \"client,convex\" --prefix-colors \"cyan,magenta\"",
		"dev:client": "vite dev",
		"dev:convex": "pnpx convex dev",
		"build": "vite build && tsc --noEmit",
		"build:dev": "NODE_ENV=production vite build",
		"deploy": "pnpm build && pnpm wrangler deploy",
		"cf-typegen": "wrangler types",
		"preview": "concurrently \"npm:start\" \"npm:dev:convex\" --names \"server,convex\" --prefix-colors \"cyan,magenta\"",
		"start": "vite start",
		"db": "pnpx convex dev",
		"lint": "pnpm exec biome check --write"
	},
	"dependencies": {
		"@convex-dev/action-cache": "^0.2.11",
		"@convex-dev/rate-limiter": "^0.2.14",
		"@convex-dev/react-query": "0.0.0-alpha.11",
		"@headlessui/react": "^2.2.9",
		"@noble/ciphers": "^2.0.1",
		"@noble/hashes": "^2.0.1",
		"@paypal/paypal-server-sdk": "^1.1.0",
		"@radix-ui/react-slot": "^1.2.3",
		"@scure/base": "^2.0.0",
		"@scure/bip32": "^2.0.1",
		"@scure/btc-signer": "^2.0.1",
		"@tanstack/react-query": "^5.90.2",
		"@tanstack/react-router": "^1.133.36",
		"@tanstack/react-router-ssr-query": "^1.132.47",
		"@tanstack/react-start": "^1.134.0",
		"convex": "^1.27.5",
		"cva": "npm:class-variance-authority@^0.7.1",
		"qrcode.react": "^4.2.0",
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"stripe": "^19.1.0",
		"tailwindcss": "^4.1.14",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.5",
		"@cloudflare/vite-plugin": "^1.13.15",
		"@tailwindcss/vite": "^4.1.14",
		"@types/node": "24.6.2",
		"@types/react": "19.2.0",
		"@types/react-dom": "^19.2.1",
		"@vitejs/plugin-react": "^5.0.4",
		"concurrently": "^9.2.1",
		"typescript": "5.9.3",
		"vite": "^7.1.12",
		"vite-tsconfig-paths": "^5.1.4",
		"wrangler": "^4.45.0"
	},
	"pnpm": {
		"overrides": {
			"@convex-dev/auth": "^0.0.90"
		}
	}
}
